source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '10.0'

target 'ExampleModel' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for ExampleModel
  pod 'Alamofire', '~> 4.0'
  pod "Himotoki", "~> 3.0"
  pod 'ReactiveCocoa', :git => 'https://github.com/ReactiveCocoa/ReactiveCocoa.git', :tag => '5.0.0-alpha.4'

  target 'ExampleModelTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Quick'
    pod 'Nimble'
  end

end

target 'ExampleView' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for ExampleView
  pod 'ReactiveCocoa', :git => 'https://github.com/ReactiveCocoa/ReactiveCocoa.git', :tag => '5.0.0-alpha.4'

  target 'ExampleViewTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Quick'
    pod 'Nimble'
  end

end

target 'ExampleViewModel' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for ExampleViewModel
  pod 'ReactiveCocoa', :git => 'https://github.com/ReactiveCocoa/ReactiveCocoa.git', :tag => '5.0.0-alpha.4'

  target 'ExampleViewModelTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Quick'
    pod 'Nimble'
   end

end

target 'SwinjectMVVMExample' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  pod 'Swinject', '2.0.0-beta.3'
  pod 'SwinjectStoryboard', '1.0.0-beta.3'

  # Pods for SwinjectMVVMExample

  target 'SwinjectMVVMExampleTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Quick'
    pod 'Nimble'
  end

end
